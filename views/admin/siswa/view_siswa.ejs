<%- include('../../parts/head.ejs') %>

<body id="page-top">
  <!-- Page Wrapper -->
  <div id="wrapper">
    <!-- Sidebar -->
    <%- include('../../parts/sidebar.ejs') %>
    <!-- End of Sidebar -->

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
      <!-- Main Content -->
      <div id="content">
        <!-- Topbar -->
        <%- include('../../parts/navbar.ejs') %>
        <!-- End of Topbar -->

        <!-- Begin Page Content -->
        <div class="container-fluid">
          <%- include('../../parts/message.ejs') %>
          <!-- Page Heading -->
          <h1 class="h3 mb-4 text-gray-800 text-capitalize">daftar siswa</h1>
          <!-- tables list -->
          <% if(action == 'view') { %>
          <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item" role="presentation">
              <a
                class="nav-link active"
                id="home-tab"
                data-toggle="tab"
                href="#show-siswa"
                role="tab"
                aria-controls="home"
                aria-selected="true"
                >daftar siswa</a
              >
            </li>
            <li class="nav-item" role="presentation">
              <a
                class="nav-link"
                id="profile-tab"
                data-toggle="tab"
                href="#add-siswa"
                role="tab"
                aria-controls="profile"
                aria-selected="false"
                >tambah siswa</a
              >
            </li>
          </ul>
          <div class="tab-content" id="myTabContent">
            <%- include('list_siswa.ejs') %> <%- include('add_siswa.ejs') %>
          </div>
          <% } else if(action =='detail_siswa') { %>
            <ul class="nav nav-tabs" id="myTab" role="tablist">
              <li class="nav-item" role="presentation">
                <a class="nav-link active" id="home-tab" data-toggle="tab" href="#detail-siswa" role="tab" aria-controls="home" aria-selected="true">detail siswa</a>
              </li>
            </ul>
            <div class="tab-content" id="myTabContent">
              <%- include('detail_siswa.ejs') %>
            </div>
          <% } else { %>
          <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item" role="presentation">
              <a
                class="nav-link active"
                id="home-tab"
                data-toggle="tab"
                href="#edit-siswa"
                role="tab"
                aria-controls="home"
                aria-selected="true"
                >edit siswa</a
              >
            </li>
          </ul>
          <div class="tab-content" id="myTabContent">
            <%- include('edit_siswa.ejs') %>
          </div>
          <% } %>
        </div>
        <!-- /.container-fluid -->
      </div>
      <!-- End of Main Content -->

      <!-- Footer -->
      <%- include('../../parts/footer.ejs') %>
      <!-- End of Footer -->
    </div>
    <!-- End of Content Wrapper -->
  </div>
  <!-- End of Page Wrapper -->

  <!-- Scroll to Top Button-->
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>

  <!-- Logout Modal-->
  <div
    class="modal fade"
    id="logoutModal"
    tabindex="-1"
    role="dialog"
    aria-labelledby="exampleModalLabel"
    aria-hidden="true"
  >
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
          <button
            class="close"
            type="button"
            data-dismiss="modal"
            aria-label="Close"
          >
            <span aria-hidden="true">Ã—</span>
          </button>
        </div>
        <div class="modal-body">
          Select "Logout" below if you are ready to end your current session.
        </div>
        <div class="modal-footer">
          <button class="btn btn-secondary" type="button" data-dismiss="modal">
            Cancel
          </button>
          <a class="btn btn-primary" href="login.html">Logout</a>
        </div>
      </div>
    </div>
  </div>

  <%- include('../../parts/js.ejs') %>
</body>
