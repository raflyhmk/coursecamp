<div
  class="tab-pane fade show active"
  id="show-siswa"
  role="tabpanel"
  aria-labelledby="home-tab"
>
  <div class="card shadow mb-4">
    <div class="card-header py-3">
      <h6 class="m-0 font-weight-bold text-primary text-capitalize">
        daftar siswa
      </h6>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table
          class="table table-bordered"
          id="dataTable"
          width="100%"
          cellspacing="0"
        >
          <thead style="text-align: center;">
            <tr>
              <th>No</th>
              <th>Foto</th>
              <th>Nama</th>
              <th>Jenis Kelamin</th>
              <th>kursus</th>
              <th>action</th>
            </tr>
          </thead>
          <tbody style="text-align: center;">
          <% for(let i = 0; i < siswa.length; i++){ %>
          <tr>
            <td><%= i + 1 %></td>
            <td>
              <img src="http://localhost:3000/<%= siswa[i].image %>" alt="foto siswa" height="70px" width="80%"/>
            </td>
            <td class="text-capitalize"><%= siswa[i].name %></td>
            <td class="text-capitalize"><%= siswa[i].JenisKelamin %></td>
            <td class="text-capitalize"><%= siswa[i].nameKursus %></td>
            <td>
              <form action="/admin/siswa/<%= siswa[i].id %>?_method=DELETE" method="POST">
                <a
                href="/admin/siswa/detail-siswa/<%= siswa[i].id %>"
                type="button"
                class="btn btn-circle btn-info btn-sm"
                ><i class="fas fa-eye"></i
              ></a>
              <a href="/admin/siswa/<%= siswa[i].id %>"class="btn btn-warning btn-circle btn-sm button-edit"><i class="fas fa-edit"></i></a>
              <button type="submit" class="btn btn-circle btn-danger btn-sm"
                ><i class="fas fa-trash"></i
              ></button>
            </td>
            </form>
          </tr>
          <% } %>
        </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
