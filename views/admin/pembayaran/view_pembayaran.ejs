<%- include('../../parts/head.ejs') %>

  <body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">
      <!-- Sidebar -->
      <%- include('../../parts/sidebar.ejs') %>
      <!-- End of Sidebar -->

      <!-- Content Wrapper -->
      <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
          <!-- Topbar -->
          <%- include('../../parts/navbar.ejs') %>
          <!-- End of Topbar -->

          <!-- Begin Page Content -->
          <div class="container-fluid">
            <!-- notification -->
            <%- include('../../parts/message.ejs') %>
            <!-- end notification -->
            <!-- Page Heading -->
            <h1 class="h3 mb-4 text-gray-800 text-capitalize">list pembayaran</h1>
            <!-- tables list -->
            <%- include('list_pembayaran.ejs') %>
            <!-- end tables list -->
            <!-- modal add -->
            <%- include('add_pembayaran.ejs') %>
            <!-- end modal add -->
          </div>
          <!-- /.container-fluid -->
        </div>
        <!-- End of Main Content -->

        <!-- Footer -->
        <%- include('../../parts/footer.ejs') %>
        <!-- End of Footer -->
      </div>
      <!-- End of Content Wrapper -->
    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
      <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    <div
      class="modal fade"
      id="logoutModal"
      tabindex="-1"
      role="dialog"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
            <button
              class="close"
              type="button"
              data-dismiss="modal"
              aria-label="Close"
            >
              <span aria-hidden="true">Ã—</span>
            </button>
          </div>
          <div class="modal-body">
            Select "Logout" below if you are ready to end your current session.
          </div>
          <div class="modal-footer">
            <button
              class="btn btn-secondary"
              type="button"
              data-dismiss="modal"
            >
              Cancel
            </button>
            <a class="btn btn-primary" href="login.html">Logout</a>
          </div>
        </div>
      </div>
    </div>

    <%- include('../../parts/js.ejs') %>
    <!-- edit modal -->
    <%- include('edit_pembayaran.ejs') %>
    <script>
      $('#dataTable').on('click', '.btn-edit', function(){
        let id = $(this).data('id');
        let name = $(this).data('name');
        let TanggalPembayaran = $(this).data('tanggal');
        let PembayaranBulan = $(this).data('bulan');
        let nameKursus = $(this).data('kursus');
        let jumlahPembayaran = $(this).data('total');
        $('#edit-pembayaran').modal('show');
        $('.id').val(id);
        $('.name').val(name);
        $('.TanggalPembayaran').val(TanggalPembayaran);
        $('.PembayaranBulan').val(PembayaranBulan);
        $('.nameKursus').val(nameKursus);
        $('.jumlahPembayaran').val(jumlahPembayaran);
      });
    </script>
  </body>
</html>
